if sidebar is bottom
  @import "sidebar-bottom"
else
  @import "sidebar-aside"

.widget
  @extend $base-style
  line-height: line-height
  word-wrap: break-word
  font-size: 0.9em
  ul, ol
    list-style: none
    margin: 0
    ul, ol
      margin: 0 20px
    ul
      list-style: disc
    ol
      list-style: decimal

.category-list-count
.tag-list-count
.archive-list-count
  padding-left: 5px
  color: color-grey
  font-size: 0.85em
  &:before
    content: "("
  &:after
    content: ")"

.tag-list-item
  display: inline-block
  color: #000
  border: 1px solid gray
  margin: 4px 5px
  padding: 0 4px
  border-radius: 6px

.tagcloud
  a
    margin-right: 5px
    display: inline-block

.social-icon-list
  margin: 0 auto
  text-align: center
  line-height: 1.7rem
  padding: 0.5rem 0

.social-icon
  font-family: font-icon
  display: inline-block
  text-align: center
  font-size: 1.5rem
  margin-left: 0.5rem
  &:hover
    color: color-link

#icon-twitter-link
  &:before
    content: "\f099"
#icon-facebook-link
  &:before
    content: "\f082"
#icon-googleplus-link
  &:before
    content: "\f0d4"
#icon-github-link
  &:before
    content: "\f09b"
#icon-instagram-link
  &:before
    content: "\f16d"
#icon-qiita-link
  &:before
    content: "\f059"

.profile-avatar
  border-radius: 50%
  display: block
  margin-left: auto
  margin-right: auto

.author-name
  text-align: center

.profile-text
  text-align: center